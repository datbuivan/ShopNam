@model SanPham
@using QLBanQuanAoNam.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "SuaSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h1>SuaSanPham</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SuaSanPham" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.MaSanPham" />
            <div class="form-group">
                <label asp-for="@Model.TenSanPham" class="control-label"></label>
                <input asp-for="@Model.TenSanPham" class="form-control" />
                <span asp-validation-for="@Model.TenSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ChatLieu" class="control-label"></label>
                <input asp-for="@Model.ChatLieu" class="form-control" />
                <span asp-validation-for="@Model.ChatLieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.GiaNhap" class="control-label"></label>
                <input asp-for="@Model.GiaNhap" class="form-control" />
                <span asp-validation-for="@Model.GiaNhap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.GiaBan" class="control-label"></label>
                <input asp-for="@Model.GiaBan" class="form-control" />
                <span asp-validation-for="@Model.GiaBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.FileUpload" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="@Model.FileUpload" class="custom-file-input " id="FLFrontImage"
                           onchange="document.getElementById('FrontImagePrv').src=window.URL.createObjectURL(this.files[0])" />
                    <label class="custom-file-label" for="FLFrontImage">Chọn Ảnh</label>
                </div>
                <span asp-validation-for="@Model.FileUpload" class="text-danger"></span>
                <img id="FrontImagePrv" src="" alt="Logo Image" width="150" height="150"
                     style="border:1px;margin-top:20px;margin-left:120px;" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.MaLoaiSp" class="control-label"></label>
                <select asp-for="@Model.MaLoaiSp" class="form-control" asp-items="ViewBag.MaLoaiSp"></select>
                <span asp-validation-for="@Model.MaLoaiSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Vote" class="control-label"></label>
                <input asp-for="@Model.Vote" class="form-control" />
                <span asp-validation-for="@Model.Vote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Slvote" class="control-label"></label>
                <input asp-for="@Model.Slvote" class="form-control" />
                <span asp-validation-for="@Model.Slvote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script type="text/javascript">
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
