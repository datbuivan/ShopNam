	<h3 class="ltext-103 cl5">
		Bộ Sưu Tập
	</h3>
</div>

<div class="flex-w flex-sb-m p-b-52">
	@await Component.InvokeAsync("LoaiSpMenu")

	<div class="flex-w flex-c-m m-tb-10">
		<div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
			<i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
			<i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
			Filter
		</div>

		<div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
			<i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
			<i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
			Search
		</div>
	</div>

	<!-- Search product -->
	<div class="dis-none panel-search w-full p-t-10 p-b-15" >
        <form class="bor8 dis-flex p-l-15" method="get">
			<button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
				<i class="zmdi zmdi-search"></i>
			</button>

			<input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search" placeholder="Search">
		</form>
	</div>

	<!-- Filter -->
	<div class="dis-none panel-filter w-full p-t-10">
		<div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm mx-auto">
			<div class="filter-col1 p-r-15 p-b-27">
				<div class="mtext-102 cl2 p-b-15">
					Sắp Xếp
				</div>
				<ul>
					<li class="p-b-6">
						<a href="@if(ViewBag.maLoaiSp!=null){@Url.Content("/Home/SanPhamTheoLoai?sort=tangDan&&maLoaiSp="+ViewBag.maLoaiSp)}else{@Url.Content("/Home/SanPhamTheoLoai?sort=tangDan")}" class="filter-link stext-106 trans-04">
							Giá: Thấp đến Cap
						</a>
					</li>

					<li class="p-b-6">
						<a href="@if(ViewBag.maLoaiSp!=null){@Url.Content("/Home/SanPhamTheoLoai?sort=giamDan&&maLoaiSp="+ViewBag.maLoaiSp)}else{@Url.Content("/Home/SanPhamTheoLoai?sort=giamDan")}" class="filter-link stext-106 trans-04">
							Giá: Cao Đến Thấp
						</a>
					</li>
				</ul>
			</div>

			<div class="filter-col2 p-r-15 p-b-27 mx-auto">
				<div class="mtext-102 cl2 p-b-15">
					Giá
				</div>
				<ul>
					<li class="p-b-6">
						<a href="@if(ViewBag.maLoaiSp!=null){@Url.Content("/Home/SanPhamTheoLoai?&maLoaiSp="+ViewBag.maLoaiSp)}else{@Url.Content("/Home/SanPhamTheoLoai")}" class="filter-link stext-106 trans-04 filter-link-active">
							Tất cả
						</a>
					</li>

					<li class="p-b-6">
						<a href ="@if(ViewBag.maLoaiSp!=null){@Url.Content("/Home/SanPhamTheoLoai?giaMax=149000&giaMin=0&maLoaiSp="+ViewBag.maLoaiSp)}else{@Url.Content("/Home/SanPhamTheoLoai?giaMax=149000&giaMin=0")}" class="filter-link stext-106 trans-04">
							0-149.000đ
						</a>
					</li>

					<li class="p-b-6">
						<a href="@if(ViewBag.maLoaiSp!=null){@Url.Content("/Home/SanPhamTheoLoai?giaMax=249000&giaMin=150000&maLoaiSp="+ViewBag.maLoaiSp)}else{@Url.Content("/Home/SanPhamTheoLoai?giaMax=249000&giaMin=150000")}" class="filter-link stext-106 trans-04">
							150.000đ-249.000đ
						</a>
					</li>

					<li class="p-b-6">
						<a href="@if(ViewBag.maLoaiSp!=null){@Url.Content("/Home/SanPhamTheoLoai?giaMax=1000000&giaMin=250000&maLoaiSp="+ViewBag.maLoaiSp)}else{@Url.Content("/Home/SanPhamTheoLoai?giaMax=1000000&giaMin=250000")}" class="filter-link stext-106 trans-04">
							+250.000đ
						</a>
					</li>
				</ul>
			</div>
