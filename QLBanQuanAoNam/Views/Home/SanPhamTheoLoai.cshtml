@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<SanPham>
@{
	ViewData["Title"] = "San Pham Theo Loai";
	Layout = "~/Views/Shared/_LayoutFashionMen.cshtml";
}
<section class="bg0 p-t-23 p-b-140">
	<div class="container">
		@await Html.PartialAsync("~/Views/Shared/_PartialSidebar.cshtml")
		<div class="row isotope-grid">
			@foreach (var item in Model)
			{
				@await Html.PartialAsync("~/Views/Shared/_PartialProduct.cshtml",item)
			}
		</div>
		@if (ViewBag.page > 1)
		{
			@Html.PagedListPager(Model,page => Url.Action("SanPhamTheoLoai","Home", new {page=page , ViewBag.maLoaiSp,ViewBag.giaMax,ViewBag.giaMin,ViewBag.sort}),new X.PagedList.Web.Common.PagedListRenderOptions(){
			LiElementClasses = new List<String> {"page-item"},
			PageClasses = new List<String> {"page-link"}
		})
		}
	</div>
</section>
